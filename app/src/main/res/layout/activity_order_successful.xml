<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerbackground"
    tools:context=".activity.OrderSuccessfulActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ordersuccessimage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ordersuccessimage"
        app:civ_border_color="#182367"
        app:civ_border_width="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:id="@+id/txtSuccessfulMessage"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/ordersuccessimage"
        android:textColor="@color/whitecolor"
        android:text="@string/your_order_has_been_successfully_placed"
        />
    <Button
        android:layout_width="100dp"
        android:background="@drawable/borderwhitebluebackground"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:id="@+id/btnOK"
        android:fontFamily="serif"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"
        android:text="@string/ok"
        />
</RelativeLayout>